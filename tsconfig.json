{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "paths": {
            "*": [
                "./node_modules/*",
                "./src/types/*"
            ]
        },
        "resolveJsonModule": true
    },
    "include": [
        "index.ts",
        "src/**/*"
    ]
}